page{
  background: #f8f8f8;
}
#step{
  margin: 20rpx 0;
}
#commodity {
  background: #fff;
  /* margin: 20rpx 0; */
}
.van-card__price {
color: var(--card-price-color,#111)!important;
}
.van-card__content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.van-card{
background-color: var(--card-background-color,#fff)!important;

}
.van-divider {
  margin: var(--divider-margin, of 0px 0) !important;
}
#bottom-content {
  background: #fff;
  padding: 0 30rpx;
  /* margin: 20rpx 30rpx 120rpx 30rpx; */
}

.bottom_flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}
#order-detail{
  margin: 20rpx 0;
  padding: 30rpx;
  height: 200rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
#bottom-but {
    position: fixed;
    bottom: 0;
    width: 750rpx;
    height: 120rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 2rpx 0px 0px rgba(229, 229, 229, 1);
    box-sizing: border-box;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    z-index: 99;
}
#bottom-but button:not([size='mini']) {
    width: 200rpx;
    height: 50rpx;
    margin-left: auto;
    margin-right: auto;
    color: #494747;
}