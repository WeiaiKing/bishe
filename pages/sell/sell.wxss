.sell_book {
  position: fixed;
  bottom: 0rpx;
  z-index: 99;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f7f7f8;
  width: 750rpx;
  box-sizing: border-box;
  height: 130rpx;
}
.next{
  margin-right:30rpx;
