}

.scan {
  position: fixed;
  z-index: 99;
  bottom: 150rpx;
  background: #ff8780;
  width: 300rpx;
  height: 75rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 0rpx 5px 0px #4c4c4c;
  margin-left: -150rpx;
