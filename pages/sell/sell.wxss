.error_flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.scan_book_list {
  margin: 30rpx;
  display: flex;
}

.scan_book_list_item {
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 70%;
}

#sell-step {
  margin-top: 80rpx;
}

.step image {
  width: 280rpx;
  height: 300rpx;
}

.step {
  font-size: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 40rpx;
}

.open {
  display: inline-block;
  color: #ff8780;
  font-size: 30rpx;
}

