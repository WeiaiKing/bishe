#info .down-menu-flex {
  display: flex;
  align-items: center;
  height: 100rpx;
  box-shadow: 0px 1px 0px 0px rgba(218, 218, 218, 1);
}

page {
  background: rgba(241, 242, 244, 1);
}

#info {
  color: #333;
  margin: 40rpx 40rpx 0 40rpx;
  width: 670rpx;
  height: 608rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.van-popup--top {
  top: 0;
  left: 0;
  width: 90% !important;
  margin: 0 40rpx;
}

#info .discound {
  border: 1px solid #666;
  text-align: center;
  width: 70rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
  font-size: 24rpx;

}


.sign_up {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    height: 100vh;
}

.sign_up_img {
    width: 204rpx;
    height: 204rpx;
    margin: 200rpx 0 80rpx 0;
}

.sign_up button:not([size='mini']) {
  
    min-height: 88rpx;
    width: 314rpx;
    margin-left: auto;
    margin-right: auto;
    font-weight: 500;
    color: #4c5bff;
    font-size: 34rpx;
}
