.error_flex {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.scan_book_list {
  padding: 30rpx;
  margin: 40rpx;
  display: flex;
  background: #fff;
}

.scan_book_list_item {
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 70%;
}

.scan {
  position: fixed;
  z-index: 99;
  bottom: 150rpx;
  background: #ff8780;
  width: 300rpx;
  height: 75rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 0rpx 5px 0px #4c4c4c;
  margin-left: -150rpx;
  left: 50%;
}

.sell_book {
  position: fixed;
  bottom: 0rpx;
  z-index: 99;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f7f7f8;
  width: 750rpx;
  box-sizing: border-box;
  height: 130rpx;
}

.next {
  margin-right: 30rpx;
  background: #ff8780;
  text-align: center;
  line-height: 70rpx;
  width: 170rpx;
  height: 70rpx;
  color: #fff;
  border-radius: 10rpx;
}

.down-menu {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 0px 1px 0px 0px rgba(218, 218, 218, 1);
}

