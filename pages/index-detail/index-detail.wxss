/* header */
.flex-row{
  display: flex;
}
#header {
  width: 100%;
  height: 450rpx;
  overflow: hidden;
  position: relative;
}

.header_background_img {
  width: 100%;
  height: 300rpx;
  filter: blur(10rpx);
  transform: scale(2);
}

.header_img {
  width: 300rpx;
  height: 400rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -200rpx;
  z-index: 99;
}

/* de_body */

#de_body {
  padding: 30rpx;
}

.de_body_price {
  margin: 15rpx 0;
  display: flex;
}

.de_body_price .discount {
  width: 80rpx;
  text-align: center;
  line-height: 40rpx;
  color: #eb4d3d;
  border: 1px solid #eb4d3d;
  height: 40rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
}

button:not([size='mini']) {
  /* stylesheetmin-height: 80rpx; */
  width: 100%;
  margin-left: auto;
  margin-right: auto;
}

/* popup */

.dialog_cart {
  font-size: 32rpx;
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 30rpx 30rpx 0 30rpx;
}

/* content-bottom */

#content-bottom {
  padding: 30rpx 20rpx;
}

/* 格子 */

.van-grid-item__content {
  padding: var(--grid-item-content-padding, 14px 8px 0 8px) !important;
}

#popup .van-cell {
  padding: var(--cell-vertical-padding, 10px) var(--cell-horizontal-padding, 1px) !important;
}

.dialog_cart .border {
  margin-bottom: 15rpx;
  padding: 15rpx;
  line-height: 60rpx;
  height: 60rpx;
  border-radius: 15rpx;
  border: 4rpx solid #f5f5f5;
}

.dialog_cart .border-active {
  margin-bottom: 15rpx;
  padding: 15rpx;
  line-height: 60rpx;
  height: 60rpx;
  color: #f19b73;
  border-radius: 15rpx;
  border: 4rpx solid #f19b73;
}

.dialog_cart .buy_num {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

#public {
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
  box-shadow: 0px 1px 0px 0px #ebedf0;
  margin: 0rpx 30rpx 0 30rpx;
  height: 150rpx;
}

#public image {
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
#comment{
  padding: 30rpx;
}
